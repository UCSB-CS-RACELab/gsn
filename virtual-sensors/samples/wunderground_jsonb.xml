<virtual-sensor name="WundergroundJson2" priority="10">
    <processing-class>
        <class-name>gsn.vsensor.BridgeVirtualSensor</class-name>
        <init-params>
        </init-params>
        <output-structure>
            <field name="station" type="varchar(100)"/>
            <field name="state" type="varchar(100)"/>
            <field name="city" type="varchar(100)"/>
            <field name="weather" type="varchar(100)"/>
	    <field name="wind_spd" type="varchar(100)"/>	
        </output-structure>
    </processing-class>
    <description>Virtual sensor for Wunderground api with Json flattener</description>
    <life-cycle pool-size="10" />
    <addressing>
        <predicate key="geographical">
        </predicate>
    </addressing>
    <storage history-size="100" />
    <streams>
        <stream name="input1">
            <source alias="source1" sampling-rate="1" storage-size="1">
                <address wrapper="generic-http-get-jsonb">
                    <predicate key="url">http://api.wunderground.com/api/349d53ed483c9c96/conditions/q/KSBA.json</predicate>
                    <predicate key="rate">60000</predicate>
                    <predicate key="request-format">application/json; charset=utf-8</predicate>
                </address>
                <query>select * from wrapper</query>
            </source>
            <query>select jsonb::jsonb #> '{current_observation,station_id}' as station, jsonb::jsonb #> '{current_observation,observation_location,state}' as state, jsonb::jsonb #> '{current_observation,observation_location,city}' as city, jsonb::jsonb #> '{current_observation,weather}' as weather, jsonb::jsonb #> '{current_observation,wind_mph}' as wind_spd   from source1</query>
        </stream>
    </streams>
</virtual-sensor>
